@model SetLocationDTO
@{
	Layout = null;
}


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/lib/leaflet/dist/leaflet.css" />
<!-- Load Leaflet from CDN -->
<link rel="stylesheet" href="~/lib/leaflet/dist/leaflet.css" />

<!-- Load Esri Leaflet Geocoder from CDN -->
<link rel="stylesheet" href="~/lib/esri-leaflet-geocoder/dist/esri-leaflet-geocoder.css">

<div style="margin: 0;	padding: 0;">



	<form asp-action="SetLocation" onsubmit="return jQuerySetLocation(this);">

		<div class="row">

			<div id="map" style="width: 100%; height: 60vh;" class="mb-2 mt-1">
			</div>

			<div class="col-md-4">
				<div class="form-group">
					<label for="markAs" class="control-label">Mark as </label>
					<input type="text" asp-for="MarkAs" id="markAs" class="form-control" />
				</div>
			</div>

			<div class="col-md-4">
				<div class="form-group">
					<label class="control-label">Latitude</label>
					<input type="text" asp-for="Latitude" id="latitude" class="form-control" />
				</div>
			</div>

			<div class="col-md-4">
				<div class="form-group ">
					<label class="control-label">Longitude</label>
					<input type="text" asp-for="Longitude" id="longitude" class="form-control" />
				</div>
			</div>

			<div class="col-md-12">
				<div class="form-group">
					<div class="row">
						<button type="submit" class="m-md-auto col-md-9 btn btn-success" />Set Location</button>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

<script src="~/lib/leaflet/dist/leaflet.js"></script>

<!-- Load Esri Leaflet from CDN -->
<script src="~/lib/esri-leaflet/dist/esri-leaflet.js"></script>

<script src="~/lib/esri-leaflet-geocoder/dist/esri-leaflet-geocoder.js"></script>

<script src="~/js/createlocation.js"></script>
